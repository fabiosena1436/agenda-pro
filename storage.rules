rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // As imagens de negócios (logos, galerias) são públicas para leitura
    // A escrita só é permitida pelo dono do negócio
    match /businesses/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
